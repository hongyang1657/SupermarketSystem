<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorWhiteBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:gravity="center"
        android:padding="14dp"
        android:textSize="18sp"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:text="@string/enter"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="4dp"
            android:text="@string/searchCodebarOnline"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/sw"
            android:textOn=""
            android:textOff=""
            android:padding="4dp"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:background="@color/colorCutOffLine2"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="8dp"
            android:text="@string/goodsBar"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_bar_code"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@drawable/edittext_back_shape"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="LabelFor" />

        <ImageView
            android:id="@+id/bt_scan"
            android:clickable="true"
            android:src="@mipmap/camera"
            android:paddingEnd="4dp"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true" />
    </LinearLayout>
    <TextView
        android:background="@color/colorCutOffLine2"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="8dp"
            android:text="@string/goodsName"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_goods_name"
            android:background="@drawable/edittext_back_shape"
            android:layout_weight="1"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="LabelFor,TextFields" />
    </LinearLayout>
    <TextView
        android:background="@color/colorCutOffLine2"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="8dp"
            android:text="@string/goodsPrice"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_goods_price"
            android:background="@drawable/edittext_back_shape"
            android:layout_weight="1"
            android:padding="8dp"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="LabelFor" />
    </LinearLayout>
    <TextView
        android:background="@color/colorCutOffLine2"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="8dp"
            android:text="@string/goodsNum"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_goods_num"
            android:background="@drawable/edittext_back_shape"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="@string/num_1"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="LabelFor" />
    </LinearLayout>
    <TextView
        android:background="@color/colorCutOffLine2"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <Button
        android:padding="6dp"
        android:id="@+id/bt_add_goods"
        android:background="@color/colorTuomanRed"
        android:text="@string/add"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>