<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorAlpha"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:text="@string/tips"
            android:background="@drawable/dialog_title_back"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <TextView
        android:textSize="18sp"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/colorBlack"
        android:text="确定删除吗？"
        android:orientation="vertical"
        android:background="@color/colorWhiteBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </TextView>

    <TextView
        android:background="@color/colorWhiteBack"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancel"
            android:text="取消"
            android:textColor="@color/colorText"
            android:clickable="true"
            android:background="@drawable/dialog_cancel"
            android:textSize="16sp"
            android:padding="14dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@color/colorWhiteBack"
            android:layout_width="1px"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_enter"
            android:text="确定"
            android:clickable="true"
            android:background="@drawable/dialog_enter"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:padding="14dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>